! Options for automatic outlier rejection/recovery

reject.
	.auto		LOG	! Automatic rejection flag
	.rejopp		LOG	! Permit the rejection of an entire opp.
        .rej_fudge      LOG     ! use fudge factor to increase chi2 controls
	.chi2_reject	REA	! Chi-square threshold for rejection
	.chi2_recover	REA	! Chi-square threshold for recovery
	.chi2_frac	REA	! Fraction of max chi2 at which start rejection
	.conv_cntr	REA	! Convergency control (correction norm)
	.nit_max	INT	! Max number of rejection iterations
	.max_perc	REA	! Max percentage of outliers
	.chi2_mag_rej	REA	! Chi-square threshold for magnitude rejection
	.chi2_mag_rec	REA	! Chi-square threshold for magnitude recovery
