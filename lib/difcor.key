! Options for iteration control in DIFCOR

difcor.
	.batch		 LOG	! noninteractive corrections
	.nit_max	 INT	! max number of iterations
	.nitg_max	 INT	! max no. of iter. with non decreasing sigma0
	.div_cntr	 REA	! divergency control
        .conv_cntr       REA    ! convergency control    
        .del_constr      REA    ! convergency of constr. step (step_fit)
        .step_sig        REA    ! length in sigma of step along LOV (step_fit) 
        .scaling_lov     LOG    ! scaling logical control
        .second_lov      LOG    ! use second eigenvalue to define LOV
	.drpa2m_apriori  LOG    ! use apriori on area/mass (def. F)
	.drpa2m_nominal  REA    ! a priori value (def. 0)
	.drpa2m_std      REA    ! apriori standard deviation (no default)
        .yarko_apriori   LOG    ! use apriori on Yarkovsky (def. F)
        .yarko_nominal   REA    ! a priori value (def. 0)
        .yarko_std       REA    ! apriori standard deviation (no default)
	.a1ng_apriori    LOG    ! use apriori on A1 (def. F) 
	.a1ng_nominal    REA    ! a priori value (def. 0)
	.a1ng_std        REA    ! apriori standard deviation (no default)
	.a2ng_apriori    LOG    ! use apriori on A2 (def. F) 
	.a2ng_nominal    REA    ! a priori value (def. 0)
	.a2ng_std        REA    ! apriori standard deviation (no default)
	.a3ng_apriori    LOG    ! use apriori on A3 (def. F) 
	.a3ng_nominal    REA    ! a priori value (def. 0)
	.a3ng_std        REA    ! apriori standard deviation (no default)
	.dtdelay_apriori LOG    ! use apriori on dtdelay (def. F) 
	.dtdelay_nominal REA    ! a priori value (def. 0)
	.dtdelay_std     REA    ! apriori standard deviation (no default)